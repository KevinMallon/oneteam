



<%= simple_form_for @request do |f|  %>

    <%= f.error_notification %>

    <%= f.check_box :active, :checked => true, :style => 'visibility: hidden' %>


    <%= f.input :project %>

    <%= f.input :content, :inline_label => 'Description:', :as => :text, :input_html => {:rows => "3", :class => "span6" } %>


    <div id="request_dates">

      <div id="request_start_date">
        <%= f.label :start_date %>
        <div id='start_date_field' class='input-append date datepicker' data-date= '<%= @current_date %>' >
          <%= f.text_field :start_date %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>
      </div>  

      <div id="request_end_date">
        <%= f.label :stop_date %>
        <div id='end_date_field' class='input-append date datepicker' data-date= '<%= @current_date %>' >
          <%= f.text_field :stop_date %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>
      </div> 
    </div>   

    <div class="row-fluid">
      <div class="span4">
        <%= f.input :group, as: :select, collection: ['Development','Finance','Marketing'], :label => "Group"  %>
      </div>

      <div class="span4">
        <%= f.label :location, 'Office' %>        
        <%= collection_select(:request, :location_id, @locations, :id, :location_name, :prompt => true) %>
      </div>
      <div class="span4"></div>
    </div>

<div class="row-fluid">

  <div class="span2">
        <%= f.label :skills_needed %></label>
  </div>

  <div class="span3">
        <% Skill.all.each do |skill| %>
              <%= check_box_tag "request[skills_needed_ids][]", skill.id,
          @request.skills_needed.include?(skill)  %>
                <%= skill.name %></br>
        <% end %>
  </div>

  <div class="span7">
  </div>  

</div>

<div class="row-fluid">
<div class="span12">
</div>
</div>

<div class="row-fluid">
<div class="span12">
  <%= f.button :submit, :class => 'btn-primary' %>
</div>
</div>


<% end %>

